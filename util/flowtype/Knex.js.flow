
type Knex = Object & Function;

type Transaction =
{
  transaction: Object,
  savepoint:   Function
};

type TransactionOptional
= Transaction
| void
| null
| NOTX; /* NOTX */

type NOTX = Symbol;

type Query
= Object /* non-sealed */
&
Promise<mixed>
&
{
  select: Function,
  insert: Function,
  update: Function,
  delete: Function,

  join: Function,

  toQuery: Function
};
